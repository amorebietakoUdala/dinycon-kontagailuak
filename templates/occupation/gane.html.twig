{% extends "base.html.twig" %}

{% block title %}{{ 'app.title' | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-auto"><b>{{ 'label.date' | trans }}:</b> {{ "now"|date('Y-m-d H:i:s', "Europe/Madrid") }}</div>
        </div>
        <div class="row">
            <div class="col-auto">
                <table id="table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'label.name' | trans }}</th>
                            <th>{{ 'label.capacity' | trans }}</th>
                            <th>{{ 'label.free' | trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for zone in zones %}
                        <tr>
                            <td>{{ zone.name }}</td>
                            <td>{{ zone.capacity }}</td>
                            <td>{{ ( zone.capacity - zone.occupation ) < 0 ? 0 : zone.capacity - zone.occupation }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}